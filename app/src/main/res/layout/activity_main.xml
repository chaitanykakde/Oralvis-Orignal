<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- ============================================== -->
    <!-- 1) LEFT SIDEBAR (Navigation) - Fixed Width    -->
    <!-- ============================================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/navigationRailCard"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="48dp"
        app:cardBackgroundColor="#121318"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingVertical="24dp"
            android:paddingHorizontal="12dp">

            <ImageView
                android:id="@+id/navLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/ic_camera"
                android:tint="@color/white"
                android:contentDescription="@string/app_name" />

            <View
                android:layout_width="2dp"
                android:layout_height="32dp"
                android:layout_marginBottom="24dp"
                android:background="#33FFFFFF" />

            <ImageView
                android:id="@+id/navCamera"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:padding="16dp"
                android:background="@drawable/nav_icon_selected_background"
                android:src="@drawable/ic_camera"
                android:tint="@color/white"
                android:contentDescription="Camera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Camera"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/navGallery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/nav_icon_background"
                android:src="@drawable/ic_sessions"
                android:tint="#66FFFFFF"
                android:contentDescription="Gallery" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Gallery"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/navFindPatients"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/nav_icon_background"
                android:src="@drawable/ic_home"
                android:tint="#66FFFFFF"
                android:contentDescription="Find Patients" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Find Patients"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/navPatient"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:background="@drawable/nav_icon_background"
                android:src="@drawable/ic_sessions"
                android:tint="#66FFFFFF"
                android:contentDescription="Patient Selection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Patient Selection"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================== -->
    <!-- 2) TOP INFO BAR (Mode, Status, Resolution)    -->
    <!-- ============================================== -->
    <LinearLayout
        android:id="@+id/topInfoBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/navigationRailCard"
        app:layout_constraintEnd_toEndOf="parent">

            <!-- Mode Label -->
            <TextView
                android:id="@+id/modeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode:"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Mode Spinner -->
            <Spinner
                android:id="@+id/modeSpinner"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/spinner_background"
                android:popupBackground="@drawable/settings_panel_background" />

            <!-- Spacer to push patient card to center -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Patient Info Card (Horizontal) - Initially hidden, centered -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/patientInfoCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1E293B"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#10B981"
                app:strokeWidth="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mode"
                        android:tint="#10B981"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Patient:"
                            android:textColor="#94A3B8"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPatientName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:ellipsize="end" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtPatientDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="ID: PID-1234"
                        android:textColor="#CBD5E1"
                        android:textSize="11sp"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <!-- Edit Patient Button -->
                    <ImageView
                        android:id="@+id/btnEditPatient"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="12dp"
                        android:padding="6dp"
                        android:src="@drawable/ic_edit"
                        android:tint="#10B981"
                        android:background="@drawable/nav_icon_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:contentDescription="Edit Patient" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Start Session button next to patient info (top-right of camera screen) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartGuidedSession"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:text="Start Session"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                android:backgroundTint="@color/white"
                app:cornerRadius="20dp" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/status_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="Connect USB Camera"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Recording Timer -->
            <TextView
                android:id="@+id/recordingTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:background="@drawable/recording_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <!-- Resolution Selector -->
            <LinearLayout
                android:id="@+id/resolutionSelector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp">

                <TextView
                    android:id="@+id/resolutionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:text="1920x1080"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/white" />

            </LinearLayout>

            <!-- Settings Button -->
            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/nav_icon_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/white" />

    </LinearLayout>

    <!-- ============================================== -->
    <!-- 3) CAMERA PREVIEW AREA (Fills Available Space) -->
    <!-- ============================================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cameraPreviewCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#000000"
        app:strokeWidth="1dp"
        app:strokeColor="#33FFFFFF"
        app:layout_constraintStart_toEndOf="@id/navigationRailCard"
        app:layout_constraintEnd_toStartOf="@id/sessionMediaCard"
        app:layout_constraintTop_toBottomOf="@id/topInfoBar"
        app:layout_constraintBottom_toTopOf="@id/bottomControlPanel">

        <!-- ONLY Camera Preview here - NO UI overlays -->
        <FrameLayout
            android:id="@+id/cameraFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

            <com.jiangdg.ausbc.widget.AspectRatioTextureView
                android:id="@+id/cameraTextureView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Optional: Focus frame overlay (minimal, center only) -->
            <View
                android:id="@+id/focusOverlay"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/camera_focus_frame"
                android:visibility="gone" />

        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================== -->
    <!-- 3.5) SESSION MEDIA PANEL (Next to Camera)     -->
    <!-- ============================================== -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/sessionMediaCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#1A1B23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topInfoBar"
        app:layout_constraintBottom_toTopOf="@id/bottomControlPanel"
        app:layout_constraintWidth_percent="0.20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Session Media"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sessionMediaCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#6A6D7A"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Media Grid/List -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <!-- RecyclerView for session media (vertical grid) -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sessionMediaRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false" />

                <!-- Empty state -->
                <LinearLayout
                    android:id="@+id/emptyMediaState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginBottom="12dp"
                        android:src="@drawable/ic_camera"
                        android:tint="#3A3D4A"
                        android:alpha="0.8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No captures yet"
                        android:textColor="#5A5D6A"
                        android:textSize="13sp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Tap Capture to start"
                        android:textColor="#4A4D5A"
                        android:textSize="11sp"
                        android:gravity="center" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================== -->
    <!-- 4) MODERN BOTTOM CONTROL PANEL                -->
    <!-- ============================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomControlPanel"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        app:layout_constraintStart_toEndOf="@id/navigationRailCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Start Session Button - temporarily hidden; top-bar button is primary entry -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartSession"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:text="Start Session"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@drawable/button_gradient_blue"
            app:backgroundTint="@null"
            android:paddingHorizontal="40dp"
            app:cornerRadius="32dp"
            app:icon="@drawable/ic_camera"
            app:iconSize="28dp"
            app:iconGravity="textStart"
            app:iconPadding="16dp"
            app:iconTint="@color/white"
            app:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.45"
            android:visibility="gone" />

        <!-- Centered Button Container - Initially hidden (3 buttons) -->
        <LinearLayout
            android:id="@+id/sessionButtonsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Capture Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCapture"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginEnd="12dp"
                android:text="Capture"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_gradient_red"
                app:backgroundTint="@null"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_camera"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/white"
                app:elevation="6dp" />

            <!-- Record Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecord"
                android:layout_width="200dp"
                android:layout_height="62dp"
                android:layout_marginEnd="12dp"
                android:text="Record"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_gradient_darkred"
                app:backgroundTint="@null"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_record"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/white"
                app:elevation="6dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ============================================== -->
    <!-- 5) SETTINGS SCRIM (Dim Background when Settings Open) -->
    <!-- ============================================== -->
    <View
        android:id="@+id/settingsScrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="50dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ============================================== -->
    <!-- 6) SETTINGS PANEL (Overlay - 50% Width from Right) -->
    <!-- ============================================== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/settings_panel_background"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="100dp"
        android:translationZ="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <!-- Settings Header -->
        <LinearLayout
            android:id="@+id/settingsHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/settings_header_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camera Settings"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnCloseSettings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Scrollable Settings Content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/settingsHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Resolution Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resolution"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/resolutionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="16dp" />

                <!-- Camera Controls Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera Controls"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Brightness Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Brightness"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekBrightness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtBrightness"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Contrast Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Contrast"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekContrast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtContrast"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Saturation Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Saturation"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekSaturation"
