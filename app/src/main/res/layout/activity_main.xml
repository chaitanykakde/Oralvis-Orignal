<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- Camera Preview fills parent -->
    <com.jiangdg.ausbc.widget.AspectRatioTextureView
        android:id="@+id/cameraTextureView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Camera Mode Selector -->
    <LinearLayout
        android:id="@+id/cameraModeSelector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/settings_panel_background"
        android:padding="8dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/modeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode:"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

        <Spinner
            android:id="@+id/modeSpinner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:popupBackground="@drawable/settings_panel_background" />

    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect USB Camera"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/status_background"
        android:padding="12dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Recording Timer -->
    <TextView
        android:id="@+id/recordingTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/recording_background"
        android:padding="12dp"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Right Controls -->
    <LinearLayout
        android:id="@+id/topControlsBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Resolution Selector -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#80000000"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/resolutionSelector">

                <TextView
                    android:id="@+id/resolutionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1920x1080"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/white" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Settings Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#80000000"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings"
                android:tint="@color/white"
                android:clickable="true"
                android:focusable="true" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Bottom Camera Controls -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Gallery Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/galleryButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="#80000000"
            app:cardElevation="4dp"
            android:layout_marginEnd="32dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_gallery"
                android:tint="@color/white" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Capture Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="8dp"
            android:layout_marginHorizontal="16dp">

            <ImageView
                android:id="@+id/btnCapture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"
                android:tint="@color/black"
                android:clickable="true"
                android:focusable="true" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Record Button -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardBackgroundColor="#80000000"
            app:cardElevation="8dp"
            android:layout_marginHorizontal="16dp">

            <ImageView
                android:id="@+id/btnRecord"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_record"
                android:tint="@color/white"
                android:clickable="true"
                android:focusable="true" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Mode Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/modeButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="#80000000"
            app:cardElevation="4dp"
            android:layout_marginStart="32dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mode"
                android:tint="@color/white" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Transparent Side Settings Panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/settings_panel_background"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85">

        <!-- Settings Header -->
        <LinearLayout
            android:id="@+id/settingsHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/settings_header_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Camera Settings"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnCloseSettings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

        <!-- Scrollable Settings Content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/settingsHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Resolution Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resolution"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Spinner
                    android:id="@+id/resolutionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/spinner_background"
                    android:layout_marginBottom="16dp" />

                <!-- Camera Mode Selection - Moved to top-left corner -->

                <!-- Camera Controls Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Camera Controls"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Brightness Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Brightness"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekBrightness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtBrightness"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Contrast Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Contrast"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekContrast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtContrast"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Saturation Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Saturation"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekSaturation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtSaturation"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Gamma Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Gamma"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekGamma"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtGamma"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Hue Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Hue"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekHue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtHue"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Sharpness Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Sharpness"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekSharpness"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtSharpness"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Gain Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Gain"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekGain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtGain"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Exposure Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Exposure"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekExposure"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtExposure"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Focus Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Focus"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekFocus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtFocus"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- White Balance Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="White Bal."
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <SeekBar
                        android:id="@+id/seekWhiteBalance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:progressTint="@color/white"
                        android:thumbTint="@color/white" />

                    <TextView
                        android:id="@+id/txtWhiteBalance"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="50"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Auto Controls Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto Controls"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAutoFocus"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="Auto Focus"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        app:cornerRadius="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAutoExposure"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="4dp"
                        android:text="Auto Exposure"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        app:cornerRadius="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAutoWhiteBalance"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="Auto WB"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        app:cornerRadius="24dp" />

                </LinearLayout>

                <!-- Reset Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetControls"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Reset to Default"
                    android:textSize="14sp"
                    android:backgroundTint="#FF9800"
                    app:cornerRadius="24dp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>