<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MediaViewerActivity">

    <!-- Image View - Full Screen -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone"
        tools:src="@drawable/ic_media_placeholder" />

    <!-- Video View - Full Screen -->
    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Floating Controls Overlay -->
    <LinearLayout
        android:id="@+id/controlsOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/bottom_control_gradient">

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.IconButton.Filled"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="#99000000"
            app:icon="@drawable/ic_back"
            app:iconTint="@color/white"
            app:iconSize="24dp" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Filename display -->
        <TextView
            android:id="@+id/txtFilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:maxWidth="200dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:visibility="gone"
            tools:text="IMG_20240101.jpg" />

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Annotate Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnnotate"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Annotate"
            android:textColor="@color/white"
            android:backgroundTint="#FF5722"
            android:visibility="gone"
            app:icon="@drawable/ic_edit"
            app:iconTint="@color/white"
            app:cornerRadius="24dp"
            tools:visibility="visible" />

    </LinearLayout>

</FrameLayout>
